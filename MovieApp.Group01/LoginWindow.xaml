<Window
    x:Class="MovieApp.Group01.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MovieApp.Group01"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>

        <!--  🎨 PALETTE  -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#8B3C46" />
        <!--  Cordovan  -->
        <SolidColorBrush x:Key="SecondaryBrush" Color="#EC9FAB" />
        <!--  Marvelous  -->
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="#E7C0BC" />
        <!--  Baby Pink  -->
        <SolidColorBrush x:Key="DarkAccentBrush" Color="#370808" />
        <!--  Black Bean  -->
        <SolidColorBrush x:Key="MediumPinkBrush" Color="#D97E8A" />
        <!--  New York Pink  -->

        <!--  TextBox Style  -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderBrush" Value="#EC9FAB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  PasswordBox Style  -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="BorderBrush" Value="#EC9FAB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Button Style  -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#D97E8A" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0,15" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Height="49"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!--  Hover  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EC9FAB" />
                            </Trigger>

                            <!--  Pressed  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#8B3C46" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!--  LAYOUT  -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="451*" />
            <ColumnDefinition Width="349*" />
        </Grid.ColumnDefinitions>

        <!--  LEFT PANEL  -->
        <StackPanel
            Width="360"
            Height="366"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <TextBlock
                Margin="0,0,0,40"
                HorizontalAlignment="Center"
                FontSize="40"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Welcome back" />

            <!--  Username  -->
            <TextBlock
                Margin="0,0,0,8"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Username" />

            <TextBox
                x:Name="UsernameTextbox"
                Margin="0,0,0,10"
                Style="{StaticResource ModernTextBox}" />

            <!--  Password  -->
            <TextBlock
                Margin="0,0,0,8"
                FontSize="14"
                FontWeight="SemiBold"
                Foreground="{StaticResource PrimaryBrush}"
                Text="Password" />

            <PasswordBox
                x:Name="PasswordTextbox"
                Margin="0,0,0,10"
                Style="{StaticResource ModernPasswordBox}" />

            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Right"
                Cursor="Hand"
                FontSize="14"
                Foreground="#999999"
                Text="Forgot password?" />

            <!--  Login Button  -->
            <Button
                x:Name="LoginButton"
                Margin="0,0,0,20"
                Click="LoginButton_Click"
                Content="Log in"
                IsDefault="True"
                Style="{StaticResource RoundedButton}" />

            <!--  Sign Up  -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    FontSize="14"
                    Foreground="Black"
                    Text="Don't have account? " />

                <TextBlock
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Black"
                    MouseLeftButtonDown="SignUp_Click"
                    Text="Sign Up"
                    TextDecorations="Underline" />
            </StackPanel>

        </StackPanel>

        <!--  RIGHT IMAGE  -->
        <Border
            Grid.Column="1"
            Margin="20,20,20,20"
            CornerRadius="20">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/assets/login.png" Stretch="UniformToFill" />
            </Border.Background>
        </Border>

    </Grid>

</Window>
