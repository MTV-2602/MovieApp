<Window x:Class="MovieApp.Group01.InputNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Name" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FCE4EC" WindowStyle="None" BorderBrush="#D81B60" BorderThickness="2">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Enter Watchlist Name:" FontSize="16" FontWeight="Bold" Foreground="#880E4F" Margin="0,0,0,10"/>

            <TextBox x:Name="TxtInput" Height="35" FontSize="14" Padding="5" BorderBrush="#EC9FAB" BorderThickness="2"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Width="80" Height="35" Margin="0,0,10,0"
                        Background="White" Foreground="#D81B60" BorderThickness="0" FontWeight="Bold"
                        Click="Cancel_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Create" Width="80" Height="35"
                        Background="#D81B60" Foreground="White" BorderThickness="0" FontWeight="Bold"
                        Click="Ok_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>