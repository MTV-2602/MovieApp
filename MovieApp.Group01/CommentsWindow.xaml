<Window x:Class="MovieApp.Group01.CommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp.Group01"
        mc:Ignorable="d"
        Title="Movie Comments" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#E7C0BC"
        ResizeMode="CanResize">

    <Window.Resources>
        <SolidColorBrush x:Key="BabyPink" Color="#E7C0BC"/>
        <SolidColorBrush x:Key="BlackBean" Color="#370808"/>
        <SolidColorBrush x:Key="Cordovan" Color="#8B3C46"/>
        <SolidColorBrush x:Key="NewYorkPink" Color="#D97E8A"/>
        <SolidColorBrush x:Key="Marvelous" Color="#EC9FAB"/>

        <Style x:Key="PlayerButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Cordovan}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource NewYorkPink}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource BlackBean}" 
                CornerRadius="10,10,0,0" Padding="15">
            <Grid>
                <StackPanel>
                    <TextBlock x:Name="TxtMovieTitle" Text="Movie Title" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="TxtCommentCount" Text="0 comments" 
                               FontSize="12" Foreground="{StaticResource Marvelous}" 
                               Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0"
                        Foreground="White" FontSize="14" Cursor="Hand"
                        Click="CloseButton_Click" Padding="5"/>
            </Grid>
        </Border>

        <!-- Post Comment Section -->
        <Border Grid.Row="1" Background="White" Padding="15" 
                BorderBrush="{StaticResource NewYorkPink}" BorderThickness="0,2,0,2">
            <StackPanel>
                <TextBlock Text="Write a comment" FontWeight="Bold" 
                           Foreground="{StaticResource BlackBean}" 
                           FontSize="14" Margin="0,0,0,8"/>
                
                <TextBox x:Name="TxtComment" Height="80" TextWrapping="Wrap" 
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,8" Padding="8"
                         BorderBrush="{StaticResource Cordovan}" BorderThickness="1"/>
                
                <Button Content="Post Comment" Style="{StaticResource PlayerButton}" 
                        Background="{StaticResource NewYorkPink}" 
                        HorizontalAlignment="Right"
                        Click="PostComment_Click"/>
            </StackPanel>
        </Border>

        <!-- Comments List -->
        <Border Grid.Row="2" Background="White" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="CommentsPanel"/>
            </ScrollViewer>
        </Border>

        <!-- Load More Button -->
        <Border Grid.Row="3" Background="{StaticResource BabyPink}" 
                CornerRadius="0,0,10,10" Padding="15">
            <Button x:Name="BtnLoadMore" Content="Load More Comments" 
                    Style="{StaticResource PlayerButton}"
                    Background="{StaticResource Cordovan}"
                    HorizontalAlignment="Center"
                    Visibility="Collapsed"
                    Click="LoadMore_Click"/>
        </Border>
    </Grid>
</Window>
