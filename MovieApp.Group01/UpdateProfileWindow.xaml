<Window x:Class="MovieApp.Group01.UpdateProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp.Group01"
        mc:Ignorable="d"
        Title="Update Profile - Pink World" Height="672" Width="1113"
        WindowStartupLocation="CenterScreen"
        Background="#FCE4EC"
        ResizeMode="NoResize">
	<Window.Resources>
		<Style x:Key="PinkButton" TargetType="Button">
			<Setter Property="Background" Value="#D81B60"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15,8"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="#AD1457"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style x:Key="PinkTextBox" TargetType="TextBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#880E4F"/>
			<Setter Property="BorderBrush" Value="#F48FB1"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Padding" Value="12,10"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="45"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
							<ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        Margin="5,0"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="PinkPasswordBox" TargetType="PasswordBox">
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="#880E4F"/>
			<Setter Property="BorderBrush" Value="#F48FB1"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Padding" Value="12,10"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Height" Value="45"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="PasswordBox">
						<Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
							<ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        Margin="5,0"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="LabelText" TargetType="TextBlock">
			<Setter Property="Foreground" Value="#880E4F"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Margin" Value="0,0,0,8"/>
		</Style>

		<Style x:Key="SectionTitle" TargetType="TextBlock">
			<Setter Property="Foreground" Value="#D81B60"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
		</Style>
	</Window.Resources>

	<Grid Margin="0,0,0,-16">
		<!-- Header -->
		<Border Background="#EC407A" Height="90" VerticalAlignment="Top">
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
				<TextBlock Text="UPDATE PROFILE" 
                         FontSize="26" 
                         FontWeight="ExtraBold" 
                         Foreground="White"
                         HorizontalAlignment="Center">
					<TextBlock.Effect>
						<DropShadowEffect Color="#880E4F" BlurRadius="2" ShadowDepth="1"/>
					</TextBlock.Effect>
				</TextBlock>
				<TextBlock x:Name="CurrentUserText"
                         Text="Update your lovely information" 
                         FontSize="13" 
                         Foreground="#FCE4EC"
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
			</StackPanel>
		</Border>

		<!-- Main Content - 2 Columns Layout -->
		<Grid Margin="30,110,30,30">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="15"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Left Column: Profile Information -->
			<Border Grid.Column="0" 
                  Background="White"
                  CornerRadius="15"
                  Padding="30">
				<Border.Effect>
					<DropShadowEffect Color="#F48FB1" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
				</Border.Effect>

				<StackPanel>
					<TextBlock Text="Profile Information" 
                             Style="{StaticResource SectionTitle}"/>

					<TextBlock Style="{StaticResource LabelText}" Text="Display Name"/>
					<TextBox x:Name="DisplayNameTextBox"
                           Style="{StaticResource PinkTextBox}"
                           Margin="0,0,0,20"/>

					<TextBlock Style="{StaticResource LabelText}" Text="Username"/>
					<TextBox x:Name="UsernameTextBox"
                           Style="{StaticResource PinkTextBox}"
                           Margin="0,0,0,25"/>

					<Button Content="Update Profile" 
                          Style="{StaticResource PinkButton}"
                          Width="180"
                          Height="45"
                          FontSize="15"
                          Click="UpdateButton_Click"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

					<!-- Account Information -->
					<TextBlock Text="Account Information" 
                             Style="{StaticResource SectionTitle}"
                             Margin="0,10,0,12"/>

					<Border Background="#E1F5FE" 
                          CornerRadius="10" 
                          Padding="15">
						<StackPanel>
							<StackPanel Orientation="Horizontal" Margin="0,5">
								<TextBlock Text="Created: " 
                                         Foreground="#01579B" 
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Width="90"/>
								<TextBlock x:Name="CreatedAtText" 
                                         Text="-" 
                                         Foreground="#0277BD" 
                                         FontSize="13"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="0,5">
								<TextBlock Text="Status: " 
                                         Foreground="#01579B" 
                                         FontSize="13"
                                         FontWeight="SemiBold"
                                         Width="90"/>
								<TextBlock x:Name="StatusText" 
                                         Text="-" 
                                         Foreground="#0277BD" 
                                         FontSize="13"/>
							</StackPanel>
						</StackPanel>
					</Border>

					<!-- Close Button -->
					<Button Content="Close" 
                          Style="{StaticResource PinkButton}"
                          Background="White"
                          Foreground="#D81B60"
                          BorderBrush="#F48FB1"
                          BorderThickness="2"
                          Width="130"
                          Height="40"
                          FontSize="14"
                          Click="CancelButton_Click"
                          HorizontalAlignment="Center"
                          Margin="0,25,0,0"/>
				</StackPanel>
			</Border>

			<!-- Right Column: Change Password -->
			<Border Grid.Column="2" 
                  Background="White"
                  CornerRadius="15"
                  Padding="30">
				<Border.Effect>
					<DropShadowEffect Color="#F48FB1" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
				</Border.Effect>

				<StackPanel>
					<TextBlock Text="Change Password" 
                             Style="{StaticResource SectionTitle}"/>

					<Border Background="#FFF3E0" 
                          CornerRadius="10" 
                          Padding="12" 
                          Margin="0,0,0,20">
						<StackPanel>
							<TextBlock Text="Security Notice" 
                                     Foreground="#E65100" 
                                     FontWeight="Bold"
                                     FontSize="12"
                                     Margin="0,0,0,5"/>
							<TextBlock Text="You must enter your current password to change to a new password" 
                                     Foreground="#EF6C00" 
                                     FontSize="11"
                                     TextWrapping="Wrap"/>
						</StackPanel>
					</Border>

					<TextBlock Style="{StaticResource LabelText}" Text="Current Password"/>
					<PasswordBox x:Name="CurrentPasswordBox"
                               Style="{StaticResource PinkPasswordBox}"
                               Margin="0,0,0,20"/>

					<TextBlock Style="{StaticResource LabelText}" Text="New Password"/>
					<PasswordBox x:Name="NewPasswordBox"
                               Style="{StaticResource PinkPasswordBox}"
                               Margin="0,0,0,20"/>

					<TextBlock Style="{StaticResource LabelText}" Text="Confirm New Password"/>
					<PasswordBox x:Name="ConfirmPasswordBox"
                               Style="{StaticResource PinkPasswordBox}"
                               Margin="0,0,0,25"/>

					<Button Content="Change Password" 
                          Style="{StaticResource PinkButton}"
                          Background="#FF6F00"
                          Width="180"
                          Height="45"
                          FontSize="15"
                          Click="ChangePasswordButton_Click"
                          HorizontalAlignment="Center"/>
				</StackPanel>
			</Border>
		</Grid>
	</Grid>
</Window>
