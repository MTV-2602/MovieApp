<Window x:Class="MovieApp.Group01.AddToWatchlistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save to Watchlist" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FCE4EC">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#D81B60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#AD1457"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Save to Watchlist" FontSize="20" FontWeight="Bold" Foreground="#880E4F" Margin="0,0,0,20"/>

            <RadioButton x:Name="RbExisting" GroupName="Mode" Content="Select existing watchlist" 
                         IsChecked="True" Foreground="#370808" FontSize="14" Margin="0,0,0,10"
                         Checked="Mode_Checked"/>

            <ComboBox x:Name="CbWatchlists" Height="35" Margin="20,0,0,20"
                      DisplayMemberPath="Title" SelectedValuePath="WatchlistId"
                      Background="White" BorderBrush="#F48FB1"/>

            <RadioButton x:Name="RbNew" GroupName="Mode" Content="Create new watchlist" 
                         Foreground="#370808" FontSize="14" Margin="0,0,0,10"
                         Checked="Mode_Checked"/>

            <TextBox x:Name="TxtNewWatchlist" Height="35" Margin="20,0,0,5"
                     Padding="5" BorderBrush="#F48FB1" IsEnabled="False"
                     Text="My Favorite Movies"/>
            <TextBlock Text="Enter a name for your new list" FontSize="11" Foreground="#880E4F" Margin="22,0,0,20" FontStyle="Italic"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,60,0,0">
                <Button Content="Cancel" Background="#E0E0E0" Foreground="Black" Width="80" Height="35" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Content="Save Movie" Width="100" Height="35" Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>