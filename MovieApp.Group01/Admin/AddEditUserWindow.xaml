<Window
    x:Class="MovieApp.Group01.AddEditUserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add/Edit User"
    Width="500"
    Height="500"
    Background="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBrush" Color="#8B3C46" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="#EC9FAB" />
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#370808" />
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336" />

        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>

        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="BorderBrush" Value="#EC9FAB" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="BorderBrush" Value="#EC9FAB" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="BorderBrush" Value="#EC9FAB" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#370808" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <Style x:Key="FormButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#F44336" />
            <Setter Property="Margin" Value="0,-10,0,10" />
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>

    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#8B3C46"
            Margin="0,0,0,25"
            Text="Add/Edit User" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Style="{StaticResource FormLabel}" Text="Display Name *" />
                <TextBox
                    x:Name="DisplayNameTextBox"
                    Style="{StaticResource FormTextBox}"
                    TextChanged="DisplayNameTextBox_TextChanged" />
                <TextBlock
                    x:Name="DisplayNameError"
                    Style="{StaticResource ErrorText}"
                    Text="Display Name is required" />

                <TextBlock Style="{StaticResource FormLabel}" Text="Username *" />
                <TextBox
                    x:Name="UsernameTextBox"
                    Style="{StaticResource FormTextBox}"
                    TextChanged="UsernameTextBox_TextChanged" />
                <TextBlock
                    x:Name="UsernameError"
                    Style="{StaticResource ErrorText}"
                    Text="Username is required" />

                <TextBlock Style="{StaticResource FormLabel}" Text="Password *" />
                <PasswordBox
                    x:Name="PasswordBox"
                    Style="{StaticResource FormPasswordBox}"
                    PasswordChanged="PasswordBox_PasswordChanged" />
                <TextBlock
                    x:Name="PasswordError"
                    Style="{StaticResource ErrorText}"
                    Text="Password is required" />

                <TextBlock Style="{StaticResource FormLabel}" Text="Role *" />
                <ComboBox
                    x:Name="RoleComboBox"
                    Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="User" Tag="2" IsSelected="True" />
                    <ComboBoxItem Content="Admin" Tag="1" />
                </ComboBox>

                <TextBlock Style="{StaticResource FormLabel}" Text="Status *" />
                <ComboBox
                    x:Name="StatusComboBox"
                    Style="{StaticResource FormComboBox}">
                    <ComboBoxItem Content="Active" IsSelected="True" />
                    <ComboBoxItem Content="Banned" />
                    <ComboBoxItem Content="Inactive" />
                </ComboBox>

            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,20,0,0"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                x:Name="SaveButton"
                Click="SaveButton_Click"
                Style="{StaticResource FormButton}"
                Background="#4CAF50"
                Content="Save"
                Margin="0,0,10,0" />
            <Button
                Click="CancelButton_Click"
                Style="{StaticResource FormButton}"
                Background="#9E9E9E"
                Content="Cancel" />
        </StackPanel>

    </Grid>
</Window>

