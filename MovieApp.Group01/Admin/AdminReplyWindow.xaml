<Window
    x:Class="MovieApp.Group01.AdminReplyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Reply Comment"
    Width="500"
    Height="300"
    Background="White"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            FontSize="18"
            FontWeight="Bold"
            Foreground="#8B3C46"
            Margin="0,0,0,15"
            Text="Reply to Comment" />

        <TextBox
            Grid.Row="1"
            x:Name="ReplyTextBox"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto"
            Padding="10"
            BorderBrush="#EC9FAB"
            BorderThickness="1.5"
            FontSize="14"
            Margin="0,0,0,15" />

        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                x:Name="PostButton"
                Click="PostButton_Click"
                Content="Post Reply"
                Padding="15,8"
                Background="#4CAF50"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                Margin="0,0,10,0" />
            <Button
                Click="CancelButton_Click"
                Content="Cancel"
                Padding="15,8"
                Background="#9E9E9E"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand" />
        </StackPanel>
    </Grid>
</Window>

